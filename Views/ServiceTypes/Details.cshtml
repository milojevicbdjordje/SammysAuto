@model SammysAuto.Models.ServiceType;
@{
    ViewData["Title"] = "Details";
}
<br />
<h2>Service Type Details</h2>
<br />
<hr />
<div class="form-border">
    <form asp-action="Create"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Name" class="form-control" disabled="true" />
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-sm btn-success">Back to list</a>
            </div>
    </form>
</div>

